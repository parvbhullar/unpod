{
  "productName": "Unpod",
  "version": "2.0.0",
  "identifier": "com.unpod.desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3000/desktop/",
    "beforeBuildCommand": "bash scripts/prepare-server-bundle.sh",
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["binaries/node"],
    "resources": ["server"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Unpod",
    "copyright": "Copyright Â© 2024 Unpod",
    "category": "SocialNetworking",
    "shortDescription": "AI-powered communication platform",
    "longDescription": "Unpod is an AI-powered communication platform with video conferencing, messaging, and AI agents.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "Unpod",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "transparent": false,
        "url": "http://localhost:3000/desktop/"
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://unpod.s3.amazonaws.com/desktop/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": ""
    }
  }
}
