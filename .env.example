# Unpod Monorepo - Environment Configuration
# Copy this to .env and fill in your values.

# --- Django (backend-core) ---
DJANGO_SECRET_KEY=your-django-secret-key
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_DEBUG=True
DJANGO_READ_DOT_ENV_FILE=True
DJANGO_DEFAULT_FROM_EMAIL=Unpod <info@unpod.tv>
DJANGO_EMAIL_BACKEND=anymail.backends.amazon_ses.EmailBackend
ENABLE_DEBUG_TOOLBAR=False

# --- FastAPI / Super ---
SETTINGS_FILE=settings.local

# --- PostgreSQL ---
POSTGRES_DB=unpod_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# --- MongoDB ---
MONGO_DB=messaging_service
MONGO_DSN=mongodb://admin:admin@localhost:27017/messaging_service?authSource=admin

# --- Redis ---
REDIS_URL=redis://localhost:6379/1

# --- AWS ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=ap-south-1
AWS_DEFAULT_REGION=ap-south-1
AWS_REGION=ap-south-1

# --- AWS SES (Email) ---
AWS_ACCESS_KEY_FOR_ANYMAIL_SES=
AWS_SECRET_KEY_FOR_ANYMAIL_SES=
FROM_EMAIL=info@unpod.tv
SENDGRID_API_KEY=
SUPERUSER_EMAIL=admin@unpod.tv

# --- URLs ---
BASE_URL=http://localhost:8000
BASE_FRONTEND_URL=http://localhost:3000
API_SERVICE_URL=http://0.0.0.0:9116/api/v1
SECRET_API_TOKEN=your-secret-api-token

# --- LiveKit ---
LIVEKIT_URL=wss://your-livekit-url.livekit.cloud
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# --- Centrifugo ---
CENTRIFUGO_ENABLED=true
