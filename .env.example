# =============================================================================
# Base URLs
# =============================================================================
BASE_URL=http://localhost:8000
BASE_FRONTEND_URL=http://localhost:3000

# =============================================================================
# Centrifugo Real-time Server
# =============================================================================
CENTRIFUGO_ENABLED=true
CENTRIFUGO_URL=http://localhost:8100/api
CENTRIFUGO_WS_URL=ws://localhost:8100/connection/websocket
CENTRIFUGO_API_KEY=your-centrifugo-api-key
CENTRIFUGO_TOKEN_HMAC_SECRET_KEY=your-centrifugo-hmac-secret

# =============================================================================
# Checksum Validation (HMAC-SHA256)
# =============================================================================
ENABLE_CHECKSUM=true
CHECKSUM_SECRET=your-checksum-secret
CHECKSUM_MAX_TIMESTAMP_AGE=300
CHECKSUM_BROWSER_ONLY=true
CHECKSUM_REQUIRED=true

# =============================================================================
