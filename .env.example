# =============================================================================
# Unpod Monorepo - Unified Environment Configuration
# =============================================================================
# This file consolidates environment variables for all backend services:
#   - backend-core (Django)
#   - api-services (FastAPI)
#   - super (Voice AI / orchestration)
#
# Copy this to .env and fill in your values.
# Variable names have been standardized across services.
# =============================================================================

# =============================================================================
# Django Settings (backend-core)
# =============================================================================
DJANGO_SECRET_KEY=your-django-secret-key
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_DEBUG=True
DJANGO_READ_DOT_ENV_FILE=True
DJANGO_DEFAULT_FROM_EMAIL=Unpod <info@unpod.tv>
DJANGO_EMAIL_BACKEND=anymail.backends.amazon_ses.EmailBackend
ENABLE_DEBUG_TOOLBAR=False

# =============================================================================
# FastAPI / Super Settings
# =============================================================================
SETTINGS_FILE=settings.local

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_DB=unpod_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# MongoDB
# =============================================================================
MONGO_DB=messaging_service
MONGO_DSN=mongodb://admin:admin@localhost:27017/messaging_service?authSource=admin

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/1

# =============================================================================
# AWS S3
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=ap-south-1
AWS_DEFAULT_REGION=ap-south-1  # Must match AWS_S3_REGION_NAME
AWS_REGION=ap-south-1  # Used by voice services (Polly TTS, etc.)

# =============================================================================
# AWS SES (Email)
# =============================================================================
AWS_ACCESS_KEY_FOR_ANYMAIL_SES=your-ses-access-key
AWS_SECRET_KEY_FOR_ANYMAIL_SES=your-ses-secret-key
FROM_EMAIL=info@unpod.tv
SENDGRID_API_KEY=

# =============================================================================
# LiveKit
# =============================================================================
LIVEKIT_URL=wss://your-livekit-url.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# =============================================================================
# AI API Keys
