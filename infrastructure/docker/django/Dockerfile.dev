# Stage 1: Build — compile C extensions (psycopg2, argon2, etc.)
FROM python:3.12-slim AS builder

RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

COPY apps/backend-core/requirements/base.txt /tmp/requirements/base.txt
RUN pip install --no-cache-dir --prefix=/install -r /tmp/requirements/base.txt

# Stage 2: Runtime — slim image with only what's needed
FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Only runtime libs (no build-essential, no MySQL)
RUN apt-get update && apt-get install -y \
    libpq5 \
    netcat-openbsd \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy installed Python packages from builder
COPY --from=builder /install /usr/local

WORKDIR /app

EXPOSE 8000
